{
  "name": "WikiTranslate",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Translate using Wikipedia",
  // "homepage_url": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",

  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "WikiTranslate",
    "default_popup": "src/browser_action/browser_action.html"
  },
  // "content_scripts": [{
  //   "js": ["js/jquery-1.11.3.min.js"],
  //   "matches": ["http://*/*", "https://*/*"]
  // }],
  "permissions": [
    // "clipboardRead",
    // "contentSettings",
    // "contextMenus",
    "https://*.wikipedia.org/*"
  ]
}